%div
    = display_status(@croon)
    - if @croon.recording_filename
        .prepend-6.span-12.append-6
            %table#croons
                %tbody
                    = render :partial => "player", :locals => {:croon => @croon}
    - else
        - form_for @croon do |f|
            = f.label :crooner, "Show off your inner star and enter your name or alias: "
            = f.text_field :crooner
            = f.label "Click here when you are finished singing: "
            = f.submit "Finish!"
    = button_to "Try Again", croons_url, :method => :get
    %pre= @croon.song.lyrics