%div#page
    = form_for @croon do |c|
        %p
            = c.label :phone_number
            = c.phone_field :phone_number
            = error_messages(c.object.errors[:phone_number])
        %p= select("croon", "song_url", @songs_for_select)
        = c.submit 'Croon!'
    %table#croons
        %thead
            %th Play
            %th Song Title
            %th Star
            %th Votes
        %tbody
            %td= link_to :listen, :action => :listen, :id => 1
            %td My Title
            %td Chris Conley
            %td 22